<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_fragment_title" />

    <LinearLayout
        android:id="@+id/ll_event_list_page_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_warning_event"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_declaration_event_main"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="报单" />

            <Button
                android:visibility="gone"
                android:id="@+id/btn_order_event_main"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="已派单报警" />

            <Button
                android:id="@+id/btn_history_event_main"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:text="历史报警" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_commit_page_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="异常描述"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_commit_event"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ripple_item"
            android:gravity="top"
            android:padding="8dp"
            android:text="111"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_commit_event"
            style="@style/Button_Style"
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:text="提交" />

    </LinearLayout>


</LinearLayout>